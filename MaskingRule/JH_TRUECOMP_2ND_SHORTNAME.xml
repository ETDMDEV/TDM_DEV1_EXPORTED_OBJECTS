<Metadata xmlns="http://www.informatica.com/ilm/pdmds/xml/model" type="Rule" version="10.4.1;null;32;20833">
  <Rule xmlns="http://www.informatica.com/ilm/pdmds/xml/model" active="true" overideAble="false" name="JH_TRUECOMP_2ND_SHORTNAME" description="IF PN=2, FULL NAME, ELSE DONT">
    <RulePort dataType="String" order="7" scale="255" precision="255" length="0" mandatory="true" portType="OUTPUT" expression="Supermatch" name="OUTPUT_DATA"/>
    <RulePort dataType="String" order="3" scale="255" precision="255" length="0" mandatory="true" portType="INPUT" name="Short_input"/>
    <RulePort dataType="String" order="2" scale="255" precision="255" length="0" mandatory="true" portType="INPUT" name="givenname"/>
    <RulePort dataType="String" order="5" scale="255" precision="255" length="0" mandatory="true" portType="LOCAL_VARIABLE" expression="IIF(length(LTRIM(RTRIM(givenname)))=0 or ISNULL(givenname),Surname,Concat1)" name="match2"/>
    <RulePort dataType="String" order="4" scale="255" precision="255" length="0" mandatory="true" portType="LOCAL_VARIABLE" expression="CONCAT(Surname,CONCAT(', ',givenname))" name="Concat1"/>
    <RulePort dataType="Numeric" order="0" scale="10" precision="10" length="0" mandatory="true" portType="INPUT" name="PAGENUMBER"/>
    <RulePort dataType="String" order="6" scale="255" precision="255" length="0" mandatory="true" portType="LOCAL_VARIABLE" expression="IIF(PAGENUMBER=2,match2,Short_input)" name="Supermatch"/>
    <RulePort dataType="String" order="1" scale="255" precision="255" length="0" mandatory="true" portType="INPUT" name="Surname"/>
  </Rule>
</Metadata>